// Replace your code here
class App extends Component {
  state = {
    visitedCountryList: [],
    isVisitedPlace: initialCountriesList.isVisited,
  }

  onClickedVisit = currentId => {
    const clicked = initialCountriesList.filter(each => each.id === currentId)
    return this.setState({isVisitedPlace: true})
  }

  renderedVisitedList = () => {
    const resultOfList = initialCountriesList.filter(
      each => each.isVisited === true,
    )
    return resultOfList
  }

  render() {
    const resultOfList = this.renderedVisitedList()
    const {visitedCountryList} = this.state

    return (
      <div className="main-container">
        <div className="main-heading">Countries</div>
        <ul className="top-container">
          {initialCountriesList.map(eachCountry => (
            <AllCountryList
              countryDetails={eachCountry}
              key={eachCountry.id}
              onClickedVisit={this.onClickedVisit}
            />
          ))}
        </ul>
        <div className="main-heading">Visited Countries</div>
        <ul className="bottom-container">
          {resultOfList.map(eachVisit => (
            <VisitedCountryList
              visitedCountryDetails={eachVisit}
              key={eachVisit.id}
            />
          ))}
        </ul>
      </div>
    )
  }
}
export default App

