import './index.css'

const AllCountryList = props => {
  const {countryDetails, onClickedVisit} = props
  const {name, isVisited, id} = countryDetails

  const onClickVisited = () => {
    onClickedVisit(id)
  }

  const visitedOrNot = isVisited ? 'Visited' : 'Visit'

  return (
    <li className="orderedList">
      <p className="name-para">{name}</p>
      <button
        className={` ${visitedOrNot}`}
        type="submit"
        onClick={onClickVisited}
      >
        {visitedOrNot}
      </button>
    </li>
  )
}

export default AllCountryList


.orderedList {
  display: flex;
  width: 100%;
  justify-content: space-between;
  align-items: center;
  background-color: #1f1f2f;
  padding-left: 30px;
  border: 1px solid #334155;
}

